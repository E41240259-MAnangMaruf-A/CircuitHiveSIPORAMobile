<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <!-- DETAIL -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Tema + File Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_tema"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tema"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_file_type"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="PDF"
                    android:textColor="#444"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Judul -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Judul Dokumen"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Abstrak -->
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Deskripsi dokumen..."
                android:textColor="#666"
                android:textSize="14sp" />

            <!-- Uploader + Download Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_uploader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Uploader"
                    android:textColor="#444"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_download_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Download"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Jurusan & Prodi & Tahun -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jurusan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jurusan"
                    android:textColor="#444"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_prodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Prodi"
                    android:textColor="#444"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tahun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2025"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Tombol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat"
                    android:textColor="#2196F3"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="#DDD"
                    android:layout_marginHorizontal="10dp" />

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textColor="#2196F3"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
