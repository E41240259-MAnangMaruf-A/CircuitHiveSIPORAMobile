<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".rizalmhs.Register.HomeActivity">

    <!-- Logo Polije dengan bayangan custom -->
    <ImageView
        android:id="@+id/opening_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0"
        android:contentDescription="Logo POLIJE"
        android:src="@drawable/ic_polije"
        android:elevation="20dp"
        android:outlineSpotShadowColor="#40000000"
        android:outlineAmbientShadowColor="#40000000"
        app:layout_constraintBottom_toTopOf="@id/opening_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp" />

    <!-- Judul SIPORA -->
    <TextView
        android:id="@+id/opening_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIPORA"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium"
        android:elevation="8dp"
        android:alpha="0"
        android:translationY="30dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="6"
        app:layout_constraintBottom_toTopOf="@id/opening_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opening_logo"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/opening_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sistem Informasi Politeknik Negeri Jember Repository Assets"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sans-serif"
        android:alpha="0"
        android:translationY="20dp"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintBottom_toTopOf="@id/progress_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opening_title"
        android:layout_marginBottom="40dp" />

    <!-- Container untuk Progress Bar dan Loading Text -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp">

        <!-- Progress Bar yang lebih pendek -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="200dp"
            android:layout_height="8dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#2196F3"
            android:progressBackgroundTint="#E3F2FD"
            android:backgroundTint="#E3F2FD"
            android:visibility="visible"
            android:elevation="4dp"
            android:alpha="0"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Loading Text -->
        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:alpha="0"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="3"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>